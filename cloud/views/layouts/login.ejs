<div class="register container-fluid">
	<form action="/user/handleLogin" method="POST" class="form-login">
		<h2 class="form-signin-heading">登录</h2>
		<input type="hidden" name="_csrf" value="..."/>

		<div class="form-group">
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">
					<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
				</span>
				<input type="text" id="username" name="username" class="form-control" placeholder="dreamapple" aria-describedby="basic-addon1">
			</div>
		</div>
		
		<div class="form-group">
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon2">
					<span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
				</span>
				<input type="password" id="password" name="password" class="form-control" placeholder="默认密码为123456" aria-describedby="basic-addon2">
			</div>
		</div>
		<hr />
		<div class="form-group">
			<button type="reset" class="btn btn-warning">重置</button>
			<button type="submit" class="btn btn-primary">登录</button>
		</div>
	</form>	
</div>